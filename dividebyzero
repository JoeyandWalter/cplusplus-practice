// avoiding divide by zero error
#include <iostream>
using namespace std;

int main()
{
	double num1, num2, quotient;

	cout << "Enter a number: ";
	cin >> num1;
	cout << "Enter another number: ";
	cin >> num2;

	if (num2 == 0)
	{
		cout << "\ndivide by zero is not possible, asshole.\n\n";
	}
	else
	{
		quotient = num1 / num2;
		cout << "\nThe quotient of " << num1 << " and " << num2 << " is \n";
		cout << quotient << endl << endl;
	}
	cout << "press enter to quit";
	cin.get();
	cin.ignore();
	return 0;
}
